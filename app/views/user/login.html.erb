<div class="container">
	<div class="login-form">
		<h3>Login form</h3>
		<%= form_for(@user) do |f| %>
			<div class="field">
				<%= f.label :email %>
				<%= f.text_field :email %>
			</div>
			<div class="field">
				<%= f.label :password %>
				<%= f.text_field :password %>
			</div>
			<div class="button">
				Login
			</div>
		<% end %>
	</div>
</div>