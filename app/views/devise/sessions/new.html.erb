<div class="container">
	<div class="login-form">
		<h2>Sign in</h2>
		<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
		<div class="form-field">
			<%= f.label :email, class: "label-class" %><br />
			<%= f.email_field :email, autofocus: true , class:"form-control" %>
		</div>
		<div class="form-field">
			<%= f.label :password %><br />
		<%= f.password_field :password, autocomplete: "off" , class:"form-control"%></div>
		<% if devise_mapping.rememberable? -%>
		<div class="form-field"><%= f.check_box :remember_me %> <%= f.label :remember_me %>
		</div>
		<% end -%>
		<div class="form-field"><%= f.submit "Log in", class:"btn btn-lg btn-primary"  %></div>
		<% end %>
		<%= render "devise/shared/links" %>
	</div>
	
</div>